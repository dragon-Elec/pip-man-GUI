<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="PipManagerWindow" parent="GtkApplicationWindow">
    <property name="title">Yash's Pip Package Manager (v3.2)</property>
    <property name="default-width">900</property>
    <property name="default-height">700</property>
    <child>
      <object class="GtkBox" id="main_vbox">
        <property name="orientation">vertical</property>
        <property name="spacing">10</property>
        <property name="margin-top">10</property>
        <property name="margin-bottom">10</property>
        <property name="margin-start">10</property>
        <property name="margin-end">10</property>
        
        <!-- REFINED: Main Header Bar -->
        <child>
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="spacing">6</property>
            <!-- Left-side: Install Group -->
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">6</property>
                <child>
                  <object class="GtkEntry" id="package_entry">
                    <property name="placeholder-text">Enter package to install...</property>
                    <property name="hexpand">true</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="install_button">
                    <property name="label">Install</property>
                    <property name="tooltip-text">Install a new package with 'pip install --user'</property>
                    <property name="icon-name">list-add-symbolic</property>
                    <signal name="clicked" handler="on_install_clicked"/>
                  </object>
                </child>
              </object>
            </child>

            <!-- Middle: Expanding Spacer -->
            <child>
                <object class="GtkBox"><property name="hexpand">true</property></object>
            </child>
            
            <!-- Right-side: Search Entry -->
            <child>
              <object class="GtkSearchEntry" id="search_entry">
                <property name="placeholder-text">Search installed packages...</property>
                <signal name="search-changed" handler="on_search_changed"/>
              </object>
            </child>
          </object>
        </child>
        
        <!-- Package List -->
        <child>
          <object class="GtkScrolledWindow">
            <property name="vexpand">true</property>
            <property name="margin-top">5</property> <!-- Small top margin for separation -->
            <child>
              <object class="GtkColumnView" id="column_view"/>
            </child>
          </object>
        </child>
        
        <!-- Action Bar at the bottom (Unchanged) -->
        <child>
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="spacing">12</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">6</property>
                <child>
                  <object class="GtkButton" id="refresh_button">
                    <property name="tooltip-text">Refresh the list of installed packages</property>
                    <property name="icon-name">view-refresh-symbolic</property>
                    <signal name="clicked" handler="on_refresh_clicked"/>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="check_button">
                    <property name="label">Check</property>
                    <property name="tooltip-text">Check for broken dependencies ('pip check')</property>
                    <property name="icon-name">system-search-symbolic</property>
                    <signal name="clicked" handler="on_check_dependencies_clicked"/>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="clear_cache_button">
                    <property name="label">Clear Cache</property>
                    <property name="tooltip-text">Purge the pip download cache ('pip cache purge')</property>
                    <property name="icon-name">user-trash-symbolic</property>
                    <signal name="clicked" handler="on_clear_cache_clicked"/>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkBox"><property name="hexpand">true</property></object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">6</property>
                <child>
                  <object class="GtkLabel" id="total_size_label">
                    <property name="label">Total Size: ...</property>
                    <property name="halign">end</property>
                    <property name="valign">center</property>
                    <property name="margin-end">6</property>
                  </object>
                </child>

                <!-- ADD THIS NEW BUTTON -->
                <child>
                  <object class="GtkButton" id="details_button">
                    <property name="tooltip-text">Show details for the selected package</property>
                    <property name="sensitive">false</property>
                    <property name="icon-name">document-properties-symbolic</property>
                    <signal name="clicked" handler="on_details_clicked"/>
                  </object>
                </child>
                <!-- END OF ADDITION -->
                
                <child>
                  <object class="GtkButton" id="update_button">
                    <property name="label">Update</property>
                    <property name="tooltip-text">Update the selected package to its latest version</property>
                    <property name="sensitive">false</property>
                    <property name="icon-name">software-update-available-symbolic</property>
                    <signal name="clicked" handler="on_update_clicked"/>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="uninstall_button">
                    <property name="label">Uninstall</property>
                    <property name="tooltip-text">Uninstall the selected package</property>
                    <property name="sensitive">false</property>
                    <property name="icon-name">window-close-symbolic</property>
                    <signal name="clicked" handler="on_uninstall_clicked"/>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        
        <!-- Log Output -->
        <child>
          <object class="GtkScrolledWindow">
            <property name="min-content-height">150</property>
            <property name="focus-on-click">false</property>
            <child>
              <object class="GtkTextView" id="output_textview">
                <property name="editable">false</property>
                <property name="cursor-visible">false</property>
                <property name="can-focus">false</property>
                <property name="wrap-mode">word-char</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>